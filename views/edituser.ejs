<%- include('common/navbar') %>

<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-lg-6 shadow-lg rounded-2 p-5">
      <form
        action="/edituser/<%= user._id  %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"
            >Edit your name</label
          >
          <input
            type="text"
            name="name"
            value="<%= user.name  %>"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Edit your email address</label
          >
          <input
            type="email"
            name="email"
            value="<%= user.email  %>"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"
            >Edit your profile image</label
          >
          <input type="file" name="image" class="form-control" />
        </div>

        <input
          type="submit"
          name="submit"
          value="update"
          class="btn btn-warning"
        />
      </form>
    </div>
  </div>
</div>
