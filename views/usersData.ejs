<%- include('common/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% if (users != '') { %>
      <table class="table text-center border bodrer-2 shadow-lg mt-4 ">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Image</th>
            <th scope="col">ShowImportedData</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((item,index) => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.email %></td>
            <td><img src="<%= item.image %>" width="50" alt="userimage" /></td>
            <td>
              <a href="/showimportdata">
                <button class="btn btn-warning">ShowImportedUsers</button>
              </a>
            </td>
            <td>
              <a href="/edituser/<%= item._id  %>">
                <button class="btn btn-danger">Edit</button>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
        <div></div>
      </table>
      <div class="mt-5">
        <a href="/exportdata"
          ><button class="btn btn-success">Exportdata</button></a
        >

        <a href="/importusers" class="ms-5"
          ><button class="btn btn-warning">ImportUsers</button></a
        >
      </div>

      <% } else {%>
      <h5>no users found in data base</h5>
      <% } %>
    </div>
  </div>
</div>
